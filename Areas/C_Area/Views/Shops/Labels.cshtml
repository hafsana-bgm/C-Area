﻿﻿@{
    ViewData["Title"] = "Labels";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<C_Area.Areas.C_Area.Models.Label>


<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Label List</h3>
                <div class="card-tools">

                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#createLabelModal">
                        <i class="fas fa-plus"></i> Add New Label
                    </button>



                </div>
            </div>
            <!-- /.card-header -->

            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Label Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var label in Model)
                            {
                                <tr>
                                    <td>@label.LabelId</td>
                                    <td>@label.LabelName</td>
                                      <td>
                                        <a asp-area="C_Area" asp-controller="Shops" asp-action="LabelEdit" asp-route-id="@label.LabelId" class="btn btn-info btn-sm">
                                            <i class="fas fa-edit"></i> Edit
                                            </a>
                                        <a asp-area="C_Area" asp-controller="Shops" asp-action="LabelDelete" asp-route-id="@label.LabelId" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td> 
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="createLabelModal" tabindex="-1" aria-labelledby="createLabelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createLabelModalLabel">Create Label</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="createLabelForm" action="/C_Area/Shops/LabelCreate" asp-area="C_Area">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group">
                        <label for="LabelName">Label Name</label>
                        <input type="text" id="LabelName" class="form-control" name="LabelName" placeholder="Enter label name" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

<script>
    $(document).ready(function () {
        $('#createLabelForm').on('submit', function (e) {
            e.preventDefault();
            alert("ok");
            var formData = new FormData(this);
            $.ajax({
                url: '@Url.Action("LabelCreate", "Shops", new { area = "C_Area" })',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        $('#createLabelModal').modal('hide');
                    }
                },
                error: function (error) {
                    console.error(error);
                }
            });
        });
    });
</script>