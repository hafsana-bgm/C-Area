@{
	ViewData["Title"] = "ShopList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<C_Area.Areas.C_Area.Models.Product>


<!-- Default box -->
<div class="box">
	<div class="box-header with-border">
		<h3 class="box-title">Title</h3>
		<div class="box-tools pull-right">
			<button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
			<button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
		</div>
	</div>
	<div class="box-body">


		<div class="container my-5">

			<table class="table table-hover my-5">
				<thead class="table-info">
					<tr>
						<th>Serial</th>
						<th>Name </th>
						<th>Description </th>
						<th>UploadImage</th>
						<th>Price</th>
						<th>LabelId</th>
						<th>Category</th>
						<th>IsActive</th>
						<th>Action</th>




					</tr>
				</thead>

				<tbody>
					@{
						int serial = 1;
						foreach (var data in Model)
						{
							<tr>
								<td>@serial</td>
								<td>@data.Name</td>
								<td>@data.Description</td>
								<td>
									<img src="~/Images/@data.Image" width="50%" />
								</td>
								<td>@data.Price</td>
								<td>@data.LabelId</td>
								<td>@data.Category</td>
								<td>@data.IsActive</td>



								<td>


									<a class="btn btn-info" asp-route-id="@data.ProductId" action="/C_Area/Shops/ShopInfo">ShopInfo</a>


									<a class="btn btn-warning" asp-route-id="@data.ProductId" action="/C_Area/Shops/ShopEdit">Edit</a>

									<a class="btn btn-danger" asp-route-id="@data.ProductId" action="/C_Area/Shops/Delete">Delete</a>


								</td>

							</tr>

							serial++;


						}



					}


				</tbody>


			</table>


		</div>

	</div><!-- /.box-body -->
	<div class="box-footer">
		Footer
	</div><!-- /.box-footer-->
</div><!-- /.box --> 